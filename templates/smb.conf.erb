#======================= Global Settings =====================================

<% if @winbind %>
[global]
  workgroup = <%= @workgroup %>
  password server = <%= @passwd_server %>
  realm = <%= @realm %>
  security = <%= @security %>
  idmap uid = <%= @idmap_uid %>
  idmap gid = <%= @idmap_gid %>
  winbind separator = <%= @separator %>
  template shell = /bin/bash
  winbind use default domain = <%= @use_default_domain %>
  winbind offline logon = <%= @offline_login %>
<% end %>
